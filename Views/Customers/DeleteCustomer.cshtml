@model BlueMoonAdmin.Models.Customers

@{
    ViewData["Title"] = "Customers";
}
<form method="post" asp-action="DeleteCustomer">
    <input asp-for="Id" hidden />
    <div class="container-fluid">
        <h1 class="mt-4 pb-2"><img src="~/assets/images/alert-icon-1.png" class="text-center" /> Delete Customer @Model.CompanyName?</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-controller="Customer" asp-action="CustomerDashboard">Customer Dashboard</a></li>
            <li class="breadcrumb-item active">Delete Customer Confirmation</li>
        </ol>
        <div class="card mb-3">
            <div class="card-body">
                <div class="row pt-1">
                    <div class="col-12 mb-2 text-black">
                        <p class="text-black">You are about to delete customer @Model.CompanyName</p>
                        <p class="text-danger font-italic p-3">** Please be sure you want to delete @Model.CompanyName? Once a customer is deleted, all data is unrecoverable **</p>
                        
