                        <div class="col-3">
                            <input asp-for="AddressLine" class="form-control" readonly />
                        </div>
                        <div class="col-3">
                            <input asp-for="CityRegion" class="form-control" readonly />
                        </div>
                        <div class="col-3">
                            <input asp-for="PostCode" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="ServiceContract"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="LastServiceDate"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="CurrentMachine"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="CustomerSince"></label>
                        </div>
                    </div>
                    <div class="form-group row">
