@model BlueMoonAdmin.Models.ViewModels.CustomerViewModel

@{
    ViewData["Title"] = "Customers";
}


<form method="post" asp-action="CreateCustomer">
    <input asp-for="Customers.Id" hidden />
    <div class="container-fluid">
        <h1 class="mt-4">Managing @Model.Customers.CompanyName</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-controller="Customers" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active">Edit Customer</li>
        </ol>
        <!-- #region Form -->
        <div class="col-12">
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Customers.CompanyName"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Customers.ContactName"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Customers.OfficeAddress"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Customers.TelephoneNumber"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <input asp-for="Customers.CompanyName" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="Customers.ContactName" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="Customers.OfficeAddress" class="form-control">
                        </div>
                        <div class="col-3">
                            <input asp-for="Customers.TelephoneNumber" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Customers.ServiceContract"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Customers.LastServiceDate"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Customers.CurrentMachine"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="Customers.CustomerSince"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <input asp-for="Customers.ServiceContract" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="Customers.LastServiceDate" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="Customers.CurrentMachine" class="form-control">
                        </div>
                        <div class="col-3">
                            <input asp-for="Customers.CustomerSince" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Update Customer" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-danger w-75">Delete Customer</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- #endregion -->
        </div>
    </div>
</form>
<hr />

<div class="container-fluid col-12">
    <div class="card mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-6 pt-2">
                    <i class="fas fa-table mr-1"></i> Add Additional Contact Details i.e. Accounts Dept Contact...
                </div>
                <div class="col-6 text-right">
                    <a asp-controller="Customers" asp-action="CreateCustomer" class="btn btn-primary">Create New Contact</a>
                </div>
            </div>
        </div>
      
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTableContact" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Telephone Number</th>
                            <th>Mobile Number</th>
                            <th>Email Address</th>
                            <th>Is Primary</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.Contacts)
                        {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.TelephoneNumber</td>
                            <td>@item.MobileNumber</td>
                            <td>@item.Email</td>
                            <td>@item.PrimaryContact</td>
                            <td>
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Customers" asp-action="ViewCustomer" asp-route-Id="@item.CustomerId" class="btn btn-primary mx-1">View</a>
                                    @*<a asp-controller="Customers" asp-action="DeleteCustomer" asp-route-Id="@customer.Id" class="btn btn-danger mx-1">Delete</a>*@
                                    <a asp-controller="Customers" asp-action="UpdateCustomer" asp-route-Id="@item.CustomerId" class="btn btn-danger mx-1">Edit</a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
