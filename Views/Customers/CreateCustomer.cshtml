@model IEnumerable<BlueMoonAdmin.Models.Customers>

@{
    ViewData["Title"] = "Customers";
}

<div class="container-fluid">
    <h1 class="mt-4">Create New Customer</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Customer" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Customer Create</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net/">official DataTables documentation</a>.</div>
    </div>
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>DataTable</div>
        <div class="card-body">
            <div class="table-responsive">
              
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Company Name</th>
                            <th>Contact Name</th>
                            <th>Office Address</th>
                            <th>Telephone Number</th>
                            <th>Service Contract</th>
                            <th>Last Service Date</th>
                            <th>Current Machine</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            @*<th>Name</th>
                <th>Position</th>
                <th>Office</th>
                <th>Age</th>
                <th>Start date</th>
                <th>Salary</th>*@
                        </tr>
                    </tfoot>
                    @if (Model.Count() > 0)
                    {
                        <tbody>

                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td>@customer.CompanyName</td>
                                    <td>@customer.ContactName</td>
                                    <td>@customer.OfficeAddress</td>
                                    <td>@customer.TelephoneNumber</td>
                                    <td>@customer.ServiceContract</td>
                                    <td>@customer.LastServiceDate</td>
                                    <td>@customer.CurrentMachine</td>
                                </tr>
                            }

                        </tbody>
                    }
                </table>
                
                </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/demo/datatables-demo.js"></script>
}

