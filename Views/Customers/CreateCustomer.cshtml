                    <div class="form-group row pt-4 mb-4">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Create Customer" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-secondary w-75">Go Back</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

