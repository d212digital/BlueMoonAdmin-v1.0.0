@model BlueMoonAdmin.Models.Customers

@{
    ViewData["Title"] = "Customers";
}
<form method="post" asp-action="CreateCustomer">
    <div class="container-fluid">
        <h1 class="mt-4">Create New Customer</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-controller="Customer" asp-action="CustomerDashboard">Customer Dashboard</a></li>
            <li class="breadcrumb-item active">Customer Create</li>
        </ol>
        <div class="card mb-3">
            <div class="card-body">
                <div class="row pt-1">
                    <div class="col-12 mb-2 text-black">
                        <p class="text-black">Add new customer data here. Please ensure you enter the following information:</p>
                        <ol class="text-black">
                            <li> Company Name</li>
                            <li> All Contact Details</li>
                            <li> Service Contract Details i.e when last serviced, machine type etc</li>
                            <li> After you have created a new customer you can add more contacts, addresses and notes.</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- #region Form -->
        <div class="container col-12 border-bottom">
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="CompanyName"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="ContactName"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="EmailAddress"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="TelephoneNumber"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <input asp-for="CompanyName" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="ContactName" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="EmailAddress" class="form-control">
                        </div>
                        <div class="col-3">
                            <input asp-for="TelephoneNumber" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="OfficeAddress"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="AddressLine"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="CityRegion"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="PostCode"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <input asp-for="OfficeAddress" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="AddressLine" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="CityRegion" class="form-control">
                        </div>
                        <div class="col-3">
                            <input asp-for="PostCode" class="form-control">
                        </div>
                    </div>

