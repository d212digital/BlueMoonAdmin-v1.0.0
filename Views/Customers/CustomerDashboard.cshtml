
@{
    ViewData["Title"] = "CustomerDashboard";
}
<div class="container-fluid">
    <h1 class="mt-4">Customer Manager</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Customers" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Customer Overview</li>
    </ol>
    <!-- START cards box-->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <!-- START card-->
            <div class="card flex-row align-items-center align-items-stretch border-0">
                <div class="col-4 d-flex align-items-center bg-primary-dark justify-content-center rounded-left">
                    <em class="icon-note fa-3x"></em>
                </div>
                <div class="col-8 py-3 bg-primary rounded-right">
                    <div class="h3 mt-0">Create Customer</div>
                    <a class="text-white"  asp-controller="Customers" asp-action="CreateCustomer">@SharedLocalizer.GetLocalizedHtmlString("Add New Customer ")</a>
                    <i class="fas fa-angle-right ml-2"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-12">
            <!-- START card-->
            <div class="card flex-row align-items-center align-items-stretch border-0">
                <div class="col-4 d-flex align-items-center bg-success-dark justify-content-center rounded-left">
                    <em class="icon-organization fa-3x"></em>
                </div>
                <div class="col-8 py-3 bg-success rounded-right">
                    <div class="h3 mt-0">Total Customers (780)</div>
                    <a class="text-white"  asp-controller="Customers" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("View all customers ")</a>
                    <i class="fas fa-angle-right ml-2"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <!-- START card-->
            <div class="card flex-row align-items-center align-items-stretch border-0">
                <div class="col-4 d-flex align-items-center bg-green-dark justify-content-center rounded-left">
                    <em class="icon-calendar fa-3x"></em>
                </div>
                <div class="col-8 py-3 bg-green rounded-right">
                    <div class="h3 mt-0">Communications</div>
                    <a class="text-white" asp-controller="Calendar" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Setup email campaign ")</a>
                    <i class="fas fa-angle-right ml-2"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-12">
            <!-- START card-->
            <div class="card flex-row align-items-center align-items-stretch border-0">
                <div class="col-4 d-flex align-items-center bg-danger-dark justify-content-center rounded-left">
                    <em class="icon-magnifier-add fa-3x"></em>
                </div>
                <div class="col-8 py-3 bg-danger rounded-right">
                    <div class="h3 mt-0">Reports Manager</div>
                    <a class="text-white" asp-controller="ServiceCustomers" asp-action="ServiceContractManager">@SharedLocalizer.GetLocalizedHtmlString("View Service Reports ")</a>
                    <i class="fas fa-angle-right ml-2"></i>
                </div>
            </div>
            <!-- End Card-->
        </div>
    </div>
    <!-- End Cards Box -->
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area mr-1"></i>@SharedLocalizer.GetLocalizedHtmlString("New Leads")
                </div>
                <div class="card-body"><canvas id="myBarChart" width="100" height="40"></canvas></div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar mr-1"></i>@SharedLocalizer.GetLocalizedHtmlString("Total New Leads")
                </div>
                <div class="card-body"><canvas id="myAreaChart" width="100" height="40"></canvas></div>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script src="~/assets/demo/chart-area-customer.js"></script>
    <script src="~/assets/demo/chart-bar-customer.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/demo/datatables-demo.js"></script>
}

