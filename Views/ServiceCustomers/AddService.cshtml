@model BlueMoonAdmin.Models.Notes

@{
    ViewData["Title"] = "AddService";
}
<form method="post" asp-action="AddService">
    <div class="container-fluid">
        <h1 class="mt-4">Add service </h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-controller="ServiceCustomers" asp-action="ServiceContractManager">Dashboard</a></li>
            <li class="breadcrumb-item active">Contract Create</li>
        </ol>
        <input asp-for="CustomerId" hidden />
        <input asp-for="Id" class="form-control" value="" hidden />
        <!-- #region Form -->
        <div class="container col-12 border-bottom">
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Date"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="EngineerName"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="notes"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="ServiceType"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <input asp-for="Date" class="form-control" type="date" value="" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <input asp-for="EngineerName" class="form-control">
                        </div>
                        <div class="col-3">
                            <input asp-for="notes" class="form-control">
                        </div>
                        <div class="col-3">
                            <select asp-for="ServiceType" class="form-control">
                                <option>-- Select Option --</option>
                                <option>Partial</option>
                                <option>Complete</option>
                                <option>Break Fix</option>
                            </select>
                        </div>
                    </div>
                    

                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Add service" />
                            </div>
                            <div class="col">
                                <a asp-action="UpdateServiceContract" asp-route-Id=@Model.CustomerId class="btn btn-danger w-75">Back</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- #endregion -->
        </div>
    </div>
</form>

