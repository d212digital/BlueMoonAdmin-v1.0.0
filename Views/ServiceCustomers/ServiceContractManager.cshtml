        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-table mr-1 table-striped"></i>Service Contract Customers</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                @*
        <th>ID</th>*@
                                <th>Company Name</th>
                                <th>Contact Name</th>
                                @*<th>Telephone Number</th>*@
                                <th>Last Serviced</th>
                                <th>Start Date</th>
                                <th>Renewal Date</th>
                                <th>Next Service Date</th>
                                <th>Contract Type</th>
                                <th>Current Machine</th>
                                <th>Update:</th>
                                <th>Delete:</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                @*
                                <th>Name</th>
                                <th>Position</th>
                                <th>Office</th>
                                <th>Age</th>
                                <th>Start date</th>
                                <th>Salary</th>*@
                            </tr>
                        </tfoot>
                        <tbody>
                            
                                @foreach (var Service in @Model.CustomerCombineService)
                                 {                                        
                                        <tr>
                                            <td>@Service.customersVm.CompanyName</td>
                                            <td>@Service.customersVm.ContactName</td>
                                            @*<td>@Model.Customers.TelephoneNumber</td>*@
                                            <td>
                                                @if (@Service.ServiceCustomer.LastServiceDate != null)
                                                {
                                                    <input asp-for="@Service.ServiceCustomer.LastServiceDate" class="form-control" readonly type="date" style="border: 0px; background-color:white" />
                                                }
                                            </td>
                                            <td>
                                                @if(@Service.ServiceCustomer.StartDate != null) 
                                                {
                                                <input asp-for="@Service.ServiceCustomer.StartDate" class="form-control" readonly type="date" style="border: 0px; background-color:white" />
                                                }
                                            </td>
                                            <td>
                                                @if (@Service.ServiceCustomer.RenewalDate != null)
                                                {
                                                <input asp-for="@Service.ServiceCustomer.RenewalDate" class="form-control" readonly type="date" style="border: 0px; background-color:white" />
                                                }
                                            </td>
                                            <td>
                                                @if (@Service.ServiceCustomer.NextServiceDate != null)
                                                {
                                                <input asp-for="@Service.ServiceCustomer.NextServiceDate" class="form-control" readonly type="date" style="border: 0px; background-color:white" />
                                                }
                                            </td>
                                            <td>@Service.ServiceCustomer.ServiceContract</td>
                                            <td>@Service.ServiceCustomer.CurrentMachine</td>
                                            <td width="6%">
                                                <div class="col-6 p-0 text-center">
                                                    <a asp-controller="ServiceCustomers" asp-action="UpdateServiceContract" asp-route-Id="@Service.ServiceCustomer.Id" class="btn btn-primary">Update</a>
                                                </div>
                                            </td>
                                            <td width="6%">
                                                @*<div class="col-6 p-0 text-center">
                                                    <a asp-controller="ServiceCustomers" asp-action="DeleteToDoItem" asp-route-Id="@service.CustomerId" class="btn btn-danger">Delete</a>
                                                  </div>*@
                                            </td>
                                        </tr>                                           
                                 }   
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
  


    @section Scripts{

    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
