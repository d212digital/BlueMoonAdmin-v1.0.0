@model BlueMoonAdmin.Models.ViewModels.ServiceViewModel

    @{
    ViewData["Title"] = "Service Contract Manager";
    }

<div class="container-fluid">
    <h1 class="mt-4">Service Contract Manager</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Service Customers</li>
    </ol>
    <!-- START cards box-->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <!-- START card-->
            <div class="card flex-row align-items-center align-items-stretch border-0">
                <div class="col-4 d-flex align-items-center bg-primary-dark justify-content-center rounded-left">
                    <em class="icon-note fa-3x"></em>
                </div>
                <div class="col-8 py-3 bg-primary rounded-right">
                    <div class="h3 mt-0">Service Contract</div>
                    <a class="text-white" asp-controller="ServiceCustomers" asp-action="CreateServiceContract">@SharedLocalizer.GetLocalizedHtmlString("Add New Service Contract ")</a>
                    <i class="fas fa-angle-right ml-2"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-12">
            <!-- START card-->
            <div class="card flex-row align-items-center align-items-stretch border-0">
                <div class="col-4 d-flex align-items-center bg-yellow-dark justify-content-center rounded-left">
                    <em class="icon-event fa-3x"></em>
                </div>
                <div class="col-8 py-3 bg-yellow rounded-right">
                    <div class="h3 mt-0">Renewals Manager</div>
                    <a class="text-white" asp-controller="Calendar" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("View my calendar ")</a>
                    <i class="fas fa-angle-right ml-2"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <!-- START card-->
            <div class="card flex-row align-items-center align-items-stretch border-0">
                <div class="col-4 d-flex align-items-center bg-green-dark justify-content-center rounded-left">
                    <em class="icon-calendar fa-3x"></em>
                </div>
                <div class="col-8 py-3 bg-green rounded-right">
                    <div class="h3 mt-0">Service Scheduling</div>
                    <a class="text-white" asp-controller="Calendar" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("View Services Due ")</a>
                    <i class="fas fa-angle-right ml-2"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-12">
            <!-- START card-->
            <div class="card flex-row align-items-center align-items-stretch border-0">
                <div class="col-4 d-flex align-items-center bg-info-dark justify-content-center rounded-left">
                    <em class="icon-magnifier-add fa-3x"></em>
                </div>
                <div class="col-8 py-3 bg-info rounded-right">
                    <div class="h3 mt-0">Overdue Services</div>
                    <a class="text-white" asp-controller="ServiceCustomers" asp-action="ServiceContractManager">@SharedLocalizer.GetLocalizedHtmlString("View Overdue Services ")</a>
                    <i class="fas fa-angle-right ml-2"></i>
                </div>
            </div>
        </div>
    </div>
    <!-- start service level tracker -->
    <div class="card-header border-bottom mb-3">
        <div class="row">
            <div class="col-6 pt-2">
                <i class="fas fa-signal mr-1"></i>@SharedLocalizer.GetLocalizedHtmlString("Service Level Tracker")
            </div>
            <div class="col-6 text-right">
                <a class="text-right btn btn-outline-primary" asp-controller="ServiceCustomers" asp-action="CreateServiceContract">Add New Service Contract</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-header">Second Services Completed</div>
                <div class="card-body text-center">
                    <input id="knob-chart-completed" type="text" value="@Model.serviced" />
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-header">Single Services Completed</div>
                <div class="card-body text-center">
                    <input id="knob-chart-single" type="text" value="45" />
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-header">Upcoming Services Due Within 30 Days</div>
                <div class="card-body text-center">                    
                    <input id="knob-chart-upcoming" type="text" value="@Model.Upcoming"  />
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-header">Overdue Services</div>
                <div class="card-body text-center">
                    <input id="knob-chart-overdue" type="text" value="@Model.OverDue" />
                </div>
            </div>
        </div>
    </div>
