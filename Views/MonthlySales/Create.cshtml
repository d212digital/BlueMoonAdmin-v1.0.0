@model BlueMoonAdmin.Models.MonthlySales
@{
    ViewData["Title"] = "MonthlySales";
}

<div class="container-fluid">
    <h1 class="mt-4 p-2">Add monthly sales figures</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Add monthly sales figure</li>
    </ol>
</div>

<form method="post" asp-action="Create">
    <div class="container col-12 border-bottom">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group row text-center">
                    <div class="col-2">
                        <label asp-for="Month"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="StartDate"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="EndDate"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Amount"></label>
                    </div>

                </div>
                <div class="form-group row text-center">
                    <div class="col-2">
                        <select asp-for="Month" class="form-control">
                            <option>-- Select Option --</option>
                            <option>January</option>
                            <option>February</option>
                            <option>March</option>
                            <option>April</option>
                            <option>May</option>
                            <option>July</option>
                            <option>August</option>
                            <option>Sepetember</option>
                            <option>October</option>
                            <option>November</option>
                            <option>December</option>                
                        </select>
                    </div>
                    <div class="col-2">
                        <input asp-for="StartDate" class="form-control" type="date" />
                    </div>
                    <div class="col-2">
                        <input asp-for="EndDate" class="form-control" type="date" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Amount" class="form-control" />
                    </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 row p-3">
                            <div class="col">
                                <input type="submit" class="btn btn-primary w-50" value="Add Monthly Sales Figure" />
                            </div>
                            <div class="col">
                                <a asp-action="MonthlySales" class="btn btn-green w-50">Go Back</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

</form>

