
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <h1 class="mt-4">Task Manager</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="TaskManager" asp-action="Index">Task Manager</a></li>
        <li class="breadcrumb-item active">Task Manager Dashboard</li>
    </ol>
</div>

<link href="https://cdn.dhtmlx.com/scheduler/edge/dhtmlxscheduler_material.css" rel="stylesheet" type="text/css" />

<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        // initializing scheduler
        scheduler.init("scheduler_here", new Date(2021, 5, 10));

        // initiating data loading
        scheduler.load("/api/scheduler");
        // initializing dataProcessor
        var dp = new dataProcessor("/api/scheduler");
        // and attaching it to scheduler
        dp.init(scheduler);
        // setting the REST mode for dataProcessor
        dp.setTransactionMode("REST");
    });
</script>
<div class="container col-12">
    <div id="scheduler_here" class="dhx_cal_container" style='width:100%; height:100vh;'>
        <div class="dhx_cal_navline">
            <div class="dhx_cal_prev_button">&nbsp;</div>
            <div class="dhx_cal_next_button">&nbsp;</div>
            <div class="dhx_cal_today_button"></div>
            <div class="dhx_cal_date"></div>
            <div class="dhx_cal_tab" name="day_tab"></div>
            <div class="dhx_cal_tab" name="week_tab"></div>
            <div class="dhx_cal_tab" name="month_tab"></div>
        </div>
        <div class="dhx_cal_header"></div>
        <div class="dhx_cal_data"></div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.dhtmlx.com/scheduler/edge/dhtmlxscheduler.js"></script>
}
