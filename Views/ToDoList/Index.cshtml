
@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid">
    <h1 class="mt-4">Manage Your Day</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">My To Do List</li>
    </ol>
    <div class="row pt-4 border p-2">
        <div class="col-6 text-black-50">
            <h2 class="text-black-50">Add new expense item(s)</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ToDoList" asp-action="CreateToDoItem" class="btn btn-primary">Create New To Do Item</a>
        </div>
    </div>


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Date:
                    </th>
                    <th>
                        Expense Code:
                    </th>
                    <th>
                        Expense Type:
                    </th>
                    <th>
                        Company Name:
                    </th>
                    <th>
                        Expense Amount:
                    </th>
                    <th>
                        Update:
                    </th>
                    <th>
                        Delete:
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="15%">@item.ExpenseDate.ToShortDateString().ToString()</td>
                        <td width="15%">@item.ExpenseCode</td>
                        <td width="15%">@item.ExpenseType</td>
                        <td width="15%">@item.ExpenseName</td>
                        <td width="15%">£ @item.ExpenseAmount</td>

                        <td width="10%">
                            <div class="col-6 p-1 text-center">
                                <a asp-controller="Item" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-secondary">Update</a>
                            </div>
                        </td>
                        <td width="10%">
                            <div class="col-6 p-1 text-center">
                                <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expenses have been created yet</p>
    }

</div>
