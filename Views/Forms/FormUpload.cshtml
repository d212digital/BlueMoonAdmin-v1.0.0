
@{
    ViewData["Title"] = "FormUpload";
}

<div class="container-fluid">
    <h1 class="mt-4 mb-3">File Manager</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="FileManager" asp-action="Index">File Manager</a></li>
        <li class="breadcrumb-item active">File Upload</li>
    </ol>
</div>
<div class="container-fluid">
    <div class="card-header border-bottom">
        <div class="row">
            <div class="col-6 pt-2">
                <i class="fas fa-file mr-1"></i>@SharedLocalizer.GetLocalizedHtmlString(" Upload your files securely to the server")
            </div>
            <div class="col-6 text-right">
                <a class="text-right btn btn-outline-dark" asp-controller="FileManager" asp-action="Index">Back to file manager</a>
            </div>
        </div>
    </div>
    <div class="container container-lg">
        <div class="mb-3">
            <p class="m-4 text-center">
                DropzoneJS is an open source library that provides drag&apos;n&apos;drop file uploads with image previews.
                <br />It’s lightweight, doesn’t depend on any other library (like jQuery) and is<a class="ml-2" href="http://www.dropzonejs.com/" target="_blank">highly customizable</a>
            </p>
        </div>
        <form class="dropzone mb-3 card d-flex flex-row justify-content-center flex-wrap" id="dropzone-area" action="#">
            <div id="dropzone-previews"></div>
            <div class="text-right w-100">
                <button class="btn btn-primary btn-lg" type="submit">
                    <strong>Send</strong>
                </button>
            </div>
        </form>
        <p>
            <small class="text-muted">This demo does not upload files to any server.</small>
        </p>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/assets/vendor/dropzone/dist/basic.css">
    <link rel="stylesheet" href="~/assets/vendor/dropzone/dist/dropzone.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
}

@section Scripts {
    <script src="~/assets/vendor/dropzone/dist/dropzone.js"></script>
}


