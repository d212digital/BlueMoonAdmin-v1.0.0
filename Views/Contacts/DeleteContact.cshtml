@model BlueMoonAdmin.Models.Contacts

@{
    ViewData["Title"] = "Contacts";
}
<form method="post" asp-action="DeleteContact">
    <input asp-for="Id" hidden />
   
    <div class="container-fluid">
        <h1 class="mt-4">Delete contact</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-controller="Customer" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active">Delete Contact</li>
        </ol>
        <div class="card mb-3">
            <div class="card-body">
                <div class="row pt-1">
                    <div class="col-12 mb-2 text-black">
                        <p class="text-black">Are you sure you want to delete the contact below?</p>
                        @*<ol class="text-black">
                            <li> Company Name</li>
                            <li> All Contact Details</li>
                            <li> Service Contract Details i.e when last serviced, machine type etc</li>
                            <li> After you have edited the customer you can add more contacts, addresses and notes.</li>
                        </ol>*@
                    </div>
                </div>
            </div>
        </div>
        <!-- #region Form -->
        <div class="container col-12 border-bottom">
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="FirstName"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="LastName"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="TelephoneNumber"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="MobileNumber"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <input asp-for="FirstName" class="form-control" readonly />
                        </div>
                        <div class="col-3">
                            <input asp-for="LastName" class="form-control" readonly />
                        </div>
                        <div class="col-3">
                            <input asp-for="TelephoneNumber" class="form-control" readonly>
                        </div>
                        <div class="col-3">
                            <input asp-for="MobileNumber" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Email"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="PrimaryContact"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <input asp-for="Email" class="form-control" readonly />
                        </div>
                        <div class="col-3">
                            <input asp-for="PrimaryContact" class="form-control" disabled />
                        </div>
                        <div class="col-3">
                            <input asp-for="CustomerId" class="form-control" hidden />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Delete" />
                            </div>
                            <div class="col">
                                <a asp-controller="Customers" asp-action="ViewCustomer" asp-route-Id="@Model.CustomerId" class="btn btn-danger w-75">Back</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- #endregion -->
        </div>
    </div>
</form>



