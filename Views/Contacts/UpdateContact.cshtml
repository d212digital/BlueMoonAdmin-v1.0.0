@model BlueMoonAdmin.Models.Contacts

@{
    ViewData["Title"] = "Contacts";
}
<form method="post" asp-action="UpdateContact">
    <input asp-for="Id" hidden />
   
    <div class="container-fluid">
        <h1 class="mt-4">Update Contact</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-controller="customer" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active">Update Contact</li>
        </ol>
        <!-- #region Form -->
        <div class="container col-12 border-bottom">
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="FirstName"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="LastName"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="TelephoneNumber"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="MobileNumber"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <input asp-for="FirstName" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="LastName" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="TelephoneNumber" class="form-control" >
                        </div>
                        <div class="col-3">
                            <input asp-for="MobileNumber" class="form-control" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Email"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="PrimaryContact"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="PrimaryContact" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input asp-for="CustomerId" class="form-control" hidden/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Save" />
                            </div>
                            <div class="col">
                                <a asp-action="DeleteContact" asp-route-Id="@Model.Id" class="btn btn-danger w-75">Delete Contact</a>
                            </div>
                            <div class="col">
                                <a asp-controller="Customers" asp-action="ViewCustomer" asp-route-Id="@Model.CustomerId" class="btn btn-danger w-75">Back</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- #endregion -->
        </div>
    </div>
</form>



