@model BlueMoonAdmin.Models.Notes

@{
    ViewData["Title"] = "Notes";
}
<form method="post" asp-action="UpdateNotes">
    <input asp-for="Id" hidden />
   
    <div class="container-fluid">
        <h1 class="mt-4">Update Note</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-controller="customer" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active">Update Note</li>
        </ol>
        <!-- #region Form -->
        <div class="container col-12 border-bottom">
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Date"></label>
                        </div>
                        <div class="col-3">
                            <label asp-for="notes"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <input asp-for="Date" class="form-control"  />
                        </div>
                        <div class="col-9">
                            <textarea rows="10" asp-for="notes" class="form-control" text-wrap:normal" type="text"></textarea>
                            <span asp-validation-for="notes" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-3">
                        <input asp-for="CustomerId" class="form-control" hidden />
                    </div>
                </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Save" />
                        </div>
                        <div class="col">
                            <a asp-action="DeleteNotes" asp-route-Id="@Model.Id" class="btn btn-danger w-75">Delete Notes</a>
                        </div>
                        <div class="col">
                            <a asp-controller="Customers" asp-action="ViewCustomer" asp-route-Id="@Model.CustomerId" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
            </div>

            <!-- #endregion -->
   
</form>



